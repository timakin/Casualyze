<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Sign in</h4>
      </div>
      <div class="modal-body">
        <%= form_for(:user, :url => session_path(:user)) do |f| %>
        <div>
          <%= f.text_field :login, :placeholder => "Username", class: "login_form full-width" %><br />
        </div>             
        <div>
          <%= f.password_field :password, :placeholder => "Password", class: "login_form full-width" %><br />
        </div>
        <%= f.submit "Sign in", class: "btn btn-primary btn-block" %>
        <% end %>
        <%= button_to "Sign up", new_registration_path(resource_name), class: "btn btn-primary btn-block fivePxMargin btn-sign-up" %>
        <button type="button" class="btn btn-default btn-block fivePxMargin" data-dismiss="modal">Cancel</button>
        <div>        
          
        </div>
      </div>
