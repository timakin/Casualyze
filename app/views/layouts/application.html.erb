<!DOCTYPE html>
<html>
<head>
  <title>Nyanda</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="row">
		<div class="col-md-2">
			<div id="sidebar-wrapper">
        <ul class="sidebar-nav">
          <li class="sidebar-brand"><%= link_to 'NYANDA', root_path, :class => 'navbar-brand' %>
          <% if user_signed_in? %>
  	        <li><%= image_tag current_user.image.thumb.url, :class => "img-circle user-image" if user_signed_in? %></li>
    	      <li><a class="user_name"><%= current_user.email[0..8] %></a></li>
      	    <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li> 
      	  <% else %>
      	  	<li><button class="btn-lg btn-primary btn-user-login" data-toggle="modal", data-target = "#myModal">Log in</button></li>
          <% end %>
          <% for board in Board.all %>
            <li class="board-list"><%= link_to board.board_name, category_board_topics_path(board.category_id, board), :class => "board-name" %></li>
          <% end %>
        </ul>
      </div>
		</div>
		<div class="col-md-10 container-main">
			<%= yield %>
		</div>
	</div>

	  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-sm">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">ログイン</h4>
          </div>
          <div class="modal-body">
              <%= form_for(:user, :url => session_path(:user)) do |f| %>
                <div>
                  <%= f.email_field :email, :autofocus => true, :placeholder => "Email", class: "login_form col-md-12" %><br />
                </div>             
                <div>
                  <%= f.password_field :password, :placeholder => "Password", class: "login_form col-md-12" %><br />
                </div>             
                <% if devise_mapping.rememberable? -%>
                  <div><%= f.check_box :remember_me, checked: true %></div>
                <% end -%>
                <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
                <button type="button" class="btn btn-default btn-block" data-dismiss="modal">キャンセル</button>
              <% end %>             
              <%= render "devise/shared/links" %>
            </div>
        </div>
      </div>
    </div>
</body>
</html>
