	<!--	<p>Voted Number: <%= @voted_num %></p><%= link_to 'Vote', vote_path(params) %> -->

	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<h2 class="discussion-declaration">Comments</h2>	
			</div>
		</div>

		<div class="row"> 
			<div class="col-md-12 comment-list">
				<% @topic.comments.each_with_index do |comment, num| %>
					<p class="Gotham txt18px">[<%= num %>]</p>
					<div class="comment-desc"><p class="ProximaNova txt18px"><%= plain_markdown comment.body.to_s %></p></div>
				<% end %>
			</div>
		</div>

		<% if (@topic.comments.count < 300) %>
		<div class="row">
			<div class="col-md-12">
				<%= render 'comments/form' %>	
			</div>
		</div>
		<% end %>
	</div>

