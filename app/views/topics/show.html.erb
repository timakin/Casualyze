	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<h2 class="discussion-declaration">Discussion</h2>	
			</div>
		</div>
		<% if user_signed_in? %>
			<div class="row">
				<div class="col-md-12">
					<%= render 'comments/form' %>	
				</div>
			</div>
		<% end %>
		<div class="row"> 
			<div class="col-md-12">
				<% @topic.comments.each do |comment| %>
					<%= markdown comment.body.to_s %>
				<% end %>
			</div>
		</div>
	</div>


<script>
	ahoy.trackview();
