
<%= form_for [@category, @board, @topic], :html => {:multipart => true} do |f| %>
  <% if @topic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h2>

      <ul>
      <% @topic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :clip %><br>
    <%= f.file_field :clip %>
  </div>
  <div class="field">
    <%= f.label :tag_list %><br>
    <%= f.text_field :tag_list %>
  </div>
  <div class="field">
    <%= f.hidden_field :board_id, :value => params[:board_id] %>
    <%= f.hidden_field :user_id, :value => current_user %>
    <%= f.hidden_field :category_id, :value => params[:category_id] %>
  </end>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
